<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tutorial_javascript_odoo form view -->
        <record id="tutorial_javascript_odoo_form" model="ir.ui.view">
            <field name="name">tutorial.javascript.odoo.form</field>
            <field name="model">tutorial.javascript</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="field_one" widget="widget_one" options="{'step': 1000}"/>
                        </group>
                        <group>
                            
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- tutorial_javascript_odoo actions window -->
        <record id="tutorial_javascript_odoo_menu_action" model="ir.actions.act_window">
            <field name="name">Tutorial Javascript</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tutorial.javascript</field>
        </record>

        <!-- tutorial_javascript_odoo menu root -->
        <menuitem id="tutorial_javascript_odoo_root"
            name="Tutorial Javascript"
            web_icon="tutorial_javascript,static/description/icon.png" />

        <!-- tutorial_javascript_odoo menu item -->
        <menuitem id="tutorial_javascript_odoo_menu"
            name="Tutorial Javascript"
            parent="tutorial_javascript_odoo_root"
            action="tutorial_javascript_odoo_menu_action" />
    </data>
</odoo>

